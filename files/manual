{
	"scene":
	{
		"screenX":x,		// define the width of the screen in pixel unit
		"screenY":x,		// define the height of the screen in pixel unit
		"fov":x,		// define the camera's field of vue
		"sampleRate":x,		// define the precision of pixel calculation
		"pixPerUnit":x,		// define the resolution
		"maxDistToPrint:x,	// define the maximal distance of printing
		"background":[color],	// define the background color
		"ambient":x,		// define the light's ambient strength
	},
	"camera":
	{
		"origin":[vector3],	// define the camera's origin
		"rotation":[vector3],	// define the camera's rotation
	},
	"light":[
	{
		"origin":[vector3],	// define the light's origin or light's direction depending of the type
		"color":[color],	// define the light's color
		"type":"lightType"	// define the light's type
		"intensity:x		// define the light's intensity. Directional light ignore this value
	}
	],
	"object"[
	{
		"origin":[vector3],	// define the object's origin
		"name":"objectName"	// define the object structure
		"rotation":[vector3]	// define the object's rotation
		"color":[color]		// define the object's color
		"radius":x		// define the sphere or cylindre radius for sphere or cylindre
		"angle":x		// define the cone's angle for cone
		"shininess":x		// define the object's shininess
		"shininessStrength::x	// define the object's shininess strength
		"limit":[limit]		// define the object's limit
		"size":[size]		// define the box size
	}
	]
}

100 < screenX
100 < screenY
0 < fov
1 <= sampleRate
1 <= pixPerUnit
0 < maxDistToPrint
0 <= ambient <= 1
0 <= intensity
0 < radius
0 < angle
low shininess : 8 ; medium shininess: 64 ; powerfull shininess: > 128
0 <= shininessStrength <= 1


[color]: [x, y, z] : 0 <= value <= 255
[vector3]: [x, y, z]
[limit]: [x, y, z, sizeX, sizeY, sizeZ] : 0 <= size
[size]: [x, y, z] : 0 <= value


"lightType"	{
			"point"		// light is spherical, with custom intensity
			"directional"	// light is setup with direction instead of origin
		}


"objectName"	{
			"sphere"
			"cylindre"
			"plan"
			"cone"
			"box"
		}
